@page
@model SmartGroceryMgtSystem.Pages.Admin.Product.EditModel
@{
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h2 class="text-center text-success mb-4">Edit Driver</h2>
    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
    }
    <div class="card shadow-lg">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" name="Name" class="form-control" value="@Model.groceryInfo.Name" required />
                </div>
                <div class="mb-3">
                    <label for="Category" class="form-label">Category</label>
                    <input type="text" name="Category" class="form-control" required value="@Model.groceryInfo.Category" />
                </div>
                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input type="number" step="0.01" name="Price" class="form-control" required value="@Model.groceryInfo.Price.ToString()" />
                </div>

                <!-- <div class="mb-3">
                     <label for="ImageUrl" class="form-label">Upload Image</label>
                     <input type="file" name="Image" class="form-control" required />
                  </div> -->
                
                @if (Model.successMessage.Length > 0)
                {
                    <div class="row mb-3">
                        <div class="col-sm-9">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>@Model.successMessage</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                            </div>
                        </div>
                    </div>
                }
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Edit Grocery</button>
                </div>
            </form>
        </div>
    </div>
</div>
