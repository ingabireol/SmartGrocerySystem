@page
@model SmartGroceryMgtSystem.Pages.Admin.DashboardModel
@{
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Admin Dashboard</h1>

    <div class="row g-4">
        <!-- Number of Users -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text fs-4 fw-bold">1,234</p>
                </div>
            </div>
        </div>

        <!-- Total Sales -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-currency-dollar text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Total Sales</h5>
                    <p class="card-text fs-4 fw-bold">$45,678</p>
                </div>
            </div>
        </div>

        <!-- Number of Orders -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-box-seam text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text fs-4 fw-bold">789</p>
                </div>
            </div>
        </div>

        <!-- Add more cards as needed -->
    </div>
</div>
