@page
@model SmartGroceryMgtSystem.Pages.Admin.Driver.CreateModel
@{
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h2 class="text-center text-success mb-4">Add new Driver</h2>
    <div class="card shadow-lg">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="fullname" class="form-label">fullname</label>
                    <input name="full_name" type="text" class="form-control" id="full_name" placeholder="Driver's fullname">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input name="email" type="email" class="form-control" id="email" placeholder="Email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Save Driver</button>
                </div>
            </form>
        </div>
    </div>
</div>
