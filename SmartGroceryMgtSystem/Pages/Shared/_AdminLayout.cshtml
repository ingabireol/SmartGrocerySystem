<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <nav class="sidebar bg-success text-white py-3" style="width: 250px;">
            <h3 class="text-center">Admin Panel</h3>
            <ul class="nav flex-column my-4">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Admin/Driver/Manage">Manage Drivers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Admin/Product/Manage">Manage Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Admin/Order/Manage">Manage Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Admin/Customer/Manage">Manage Customers</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content flex-grow-1">
            <header class="border-bottom box-shadow mb-3 bg-white">
                <nav class="navbar navbar-expand-sm navbar-light">
                    <div class="container">
                        <a class="navbar-brand" asp-area="" asp-page="/Index">SmartGroceryMgtSystem</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Logout">Logout</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-2">
        <div class="container text-center">
            &copy; 2024 - SmartGroceryMgtSystem - <a asp-area="" asp-page="/Privacy" class="text-white">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
